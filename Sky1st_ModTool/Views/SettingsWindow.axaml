<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Sky1st_ModTool.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Sky1st_ModTool.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        Title="设置"
        Width="500"
        Height="300"
        WindowStartupLocation="CenterOwner">
    
    <Design.DataContext>
        <vm:SettingsWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="20" RowDefinitions="Auto,Auto,Auto,*,Auto">
        <!-- PAC目录设置 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="PAC文件目录" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0" Text="{Binding PACDirectory}" Margin="0,0,5,0"/>
                <Button Grid.Column="1" Content="浏览..." 
                        Command="{Binding SelectPACDirectoryCommand}"/>
            </Grid>
        </StackPanel>

        <!-- 导出目录设置 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="导出目录" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0" Text="{Binding ExportDirectory}" Margin="0,0,5,0"/>
                <Button Grid.Column="1" Content="浏览..." 
                        Command="{Binding SelectExportDirectoryCommand}"/>
            </Grid>
        </StackPanel>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="保存" Command="{Binding SaveCommand}"
                    Padding="15,5"/>
            <Button Content="取消" Command="{Binding CancelCommand}"
                    Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
